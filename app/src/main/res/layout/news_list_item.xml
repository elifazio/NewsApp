<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_tiny"
    android:paddingBottom="@dimen/margin_medium"
    >

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="news title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News preview"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/list_item_title"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_web_url"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/list_item_content"
        android:id="@+id/news_web_url" />

    <TextView
        android:id="@+id/list_item_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.somelink.com/news"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/list_item_content"
        android:layout_toRightOf="@+id/news_web_url"
        android:layout_toEndOf="@+id/news_web_url"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"/>


</RelativeLayout>